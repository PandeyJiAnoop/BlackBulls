<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/grey"
        android:gravity="center"
        android:text="PERSONAL DETAILS"
        android:textColor="@color/golden"
        android:textStyle="bold"
        android:visibility="gone" />
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/purple_500"
            tools:ignore="NewApi">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/purple_500">
                <ImageView
                    android:id="@+id/menuImg"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:tint="@color/golden"
                    android:src="@drawable/ic_arrow_back" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@id/menuImg"
                    android:gravity="center_vertical"
                    android:text="Fixed Deposit Scheme(FD)"
                    android:textColor="@color/golden"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/black"

                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="Wallet Balance"
                                android:padding="10dp"
                                android:textColor="@color/golden" />
                            <TextView android:visibility="gone"
                                android:id="@+id/raise_add_tv"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:text="Raise Add Request"
                                android:padding="10dp"
                                android:background="@drawable/bg_btn"
                                android:textColor="@color/golden" />
                        </RelativeLayout>


                        <TextView
                            android:id="@+id/wallet_amount_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="21dp"
                            android:textStyle="bold"
                            android:text="\u20B9 00.00"
                            android:textColor="@color/golden" />
                        <View
                            android:layout_width="match_parent"
                            android:background="@color/grey"
                            android:layout_margin="10dp"
                            android:layout_height="0.1dp">
                        </View>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="BlackBulls Mudra Wallet"
                                android:textSize="12dp"
                                android:textColor="@color/golden" />
                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/credit_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="16dp"
                                android:text="\u20B9 00.00"
                                android:textColor="@color/golden" />
                            <View
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:background="@color/grey"
                                android:layout_height="0.1dp">
                            </View>

                        </LinearLayout>
                        <LinearLayout                 android:padding="5dp"

                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="BlackBulls Service Wallet"
                                android:textSize="12dp"
                                android:textColor="@color/golden" />
                            <TextView
                                android:id="@+id/debit_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="16dp"                   android:layout_marginTop="5dp"

                                android:text="\u20B9 00.00"
                                android:textColor="@color/golden" />
                            <View                   android:layout_marginTop="5dp"

                                android:layout_width="match_parent"
                                android:background="@color/grey"
                                android:layout_height="0.1dp">
                            </View>
                        </LinearLayout>
                        <LinearLayout                 android:padding="5dp"

                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="BlackBulls Coin Safe Wallet"
                                android:textSize="12dp"
                                android:textColor="@color/golden" />
                            <TextView
                                android:id="@+id/coin_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="5dp"

                                android:textSize="16dp"
                                android:text="\u20B9 00.00"
                                android:textColor="@color/golden" />
                            <View                   android:layout_marginTop="5dp"

                                android:layout_width="match_parent"
                                android:background="@color/grey"
                                android:layout_height="0.1dp">
                            </View>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/black"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <LinearLayout android:background="@drawable/shapeforadd"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@color/golden"
                        android:text="Fixed Deposit Scheme"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:text="Select Duration"
                        android:textColor="@color/golden" />
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView app:cardCornerRadius="5dp"
                            android:layout_width="0dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#FEE6E6">
                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <pl.droidsonroids.gif.GifImageView
                                    android:id="@+id/img1"
                                    android:layout_centerVertical="true"
                                    android:layout_width="35dp"
                                    android:layout_marginLeft="2dp"
                                    android:src="@drawable/fd"
                                    android:layout_height="35dp">

                                </pl.droidsonroids.gif.GifImageView>
                                <androidx.appcompat.widget.AppCompatButton
                                    android:elevation="5dp"
                                    android:id="@+id/threemonth_rl"
                                    android:layout_toRightOf="@+id/img1"
                                    android:layout_margin="3dp"
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:textSize="12sp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:text="DD 3 Months"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView app:cardCornerRadius="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#FEE6E6">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <pl.droidsonroids.gif.GifImageView
                                    android:id="@+id/img"
                                    android:layout_centerVertical="true"
                                    android:layout_width="35dp"
                                    android:layout_marginLeft="2dp"
                                    android:src="@drawable/fd"
                                    android:layout_height="35dp">

                                </pl.droidsonroids.gif.GifImageView>
                                <androidx.appcompat.widget.AppCompatButton
                                    android:elevation="5dp"
                                    android:id="@+id/sixmonth_rl"
                                    android:layout_toRightOf="@+id/img"
                                    android:layout_margin="3dp"
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:textSize="12sp"
                                    android:paddingLeft="5dp"
                                    android:textStyle="bold"
                                    android:paddingRight="5dp"
                                    android:textAlignment="center"
                                    android:text="DD 6 Months"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:id="@+id/sp_state"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/wallet_histroy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/details_cv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="15dp"
                        android:visibility="gone"
                        app:cardElevation="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:id="@+id/tv1"
                                android:visibility="gone"
                                android:padding="5dp"
                                android:text="Plan Name :- NA"
                                android:textColor="@color/black" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:id="@+id/tv2"
                                android:padding="5dp"
                                android:text="Plan Duration :- NA"
                                android:textColor="@color/black" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:id="@+id/tv3"
                                android:padding="5dp"
                                android:text="Deposit Amount :- NA"
                                android:textColor="@color/black" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:id="@+id/tv4"
                                android:padding="5dp"
                                android:visibility="gone"
                                android:text="Maturity Amount :- NA"
                                android:textColor="@color/black" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:id="@+id/tv5"
                                android:padding="5dp"
                                android:text="Plan Day :- NA"
                                android:textColor="@color/black" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:id="@+id/tv6"
                                android:padding="5dp"
                                android:text="Total Deposit Amount :- NA"
                                android:textColor="@color/black" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:id="@+id/tv7"
                                android:padding="5dp"
                                android:text="Interest Amount :- NA"
                                android:textColor="@color/black" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/otp_btn"
                        android:id="@+id/btn_submit"
                        android:layout_width="180dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Purchase Now"
                        android:textColor="@color/white" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>