<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">
    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/purple_500">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivBack"
            android:text="Contact Us"
            android:textColor="@color/golden"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>



    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/bottomrl"
        android:layout_below="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:src="@drawable/appicon"
                android:layout_height="130dp">
            </ImageView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="30dp"
                android:id="@+id/cv"
                app:cardElevation="20dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#2D2942"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        android:text="Send Us a Message"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="7dp"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:padding="5dp"
                        android:textColor="@color/golden"/>

                    <RelativeLayout
                        android:background="@drawable/submit_button"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <EditText
                            android:paddingLeft="20dp"
                            android:id="@+id/mob_et"
                            android:layout_marginRight="60dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:hint="Enter your name"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textSize="14dp"
                            android:singleLine="true"
                            android:textColorHint="#eee"  />
                        <ImageView
                            android:layout_width="50dp"
                            android:padding="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/user_icon"
                            android:layout_height="50dp">
                        </ImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:background="@drawable/submit_button"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <EditText
                            android:paddingLeft="20dp"
                            android:id="@+id/emailid_et"
                            android:layout_marginRight="60dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:hint="Enter email id "
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:inputType="textEmailAddress"
                            android:textSize="14dp"
                            android:singleLine="true"
                            android:textColorHint="#eee"  />
                        <ImageView
                            android:layout_width="50dp"
                            android:padding="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/a_dip"
                            android:layout_height="50dp">
                        </ImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:background="@drawable/submit_button"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        <EditText
                            android:paddingLeft="20dp"
                            android:id="@+id/msg_et"
                            android:layout_marginRight="60dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:hint="Enter Message*"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textSize="14dp"
                            android:maxLines="6"
                            android:textColorHint="#eee"  />
                        <ImageView
                            android:layout_width="50dp"
                            android:padding="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/a_moneytransfer"
                            android:layout_height="50dp">
                        </ImageView>
                    </RelativeLayout>



                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/otp_btn"
                        android:id="@+id/btnSubmit"
                        android:layout_width="300dp"
                        android:layout_height="55dp"
                        android:text="Submit"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp"
                        android:textAllCaps="false"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
