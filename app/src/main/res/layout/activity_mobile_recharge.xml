<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/purple_500">
        <ImageView
            android:tint="@color/golden"
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_arrow_back" />
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ivBack"
            android:text="Mobile Recharge"
            android:textColor="@color/golden"
            android:textSize="16dp" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:src="@drawable/banner"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ImageView>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="gone"
                android:background="@drawable/background"
                android:id="@+id/rl">
                <ImageView
                    android:id="@+id/img_showProfile"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:tint="@color/golden"
                    android:layout_marginLeft="120dp"
                    android:src="@drawable/ic_account_balance_wallet_black_24dp"
                    android:layout_marginTop="5dp" />
                <TextView
                    android:id="@+id/deposite_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_showProfile"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="00.00 \u20B9"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="1dp"
                android:background="@drawable/rectangle_box"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/provider_ll"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/provoider_et"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:paddingLeft="15dp"
                        android:textSize="13dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:paddingRight="10dp"
                        android:drawableRight="@android:drawable/ic_menu_save"
                        android:text="Provider List"
                        android:layout_height="44dp">
                    </TextView>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/grey"
                        android:layout_height="1dp">
                    </View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/numb"
                        android:layout_width="wrap_content"
                        android:text="  +91"
                        android:textSize="16dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content">

                    </TextView>
                    <EditText
                        android:id="@+id/mob_et"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:paddingLeft="10dp"
                        android:inputType="number"
                        android:maxLength="15"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:paddingRight="10dp"
                        android:backgroundTint="@color/grey"
                        android:drawableRight="@drawable/ic_phone_android"
                        android:hint="Enter Number"
                        android:layout_height="44dp">
                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/grey"
                        android:layout_height="1dp">
                    </View>
                    <EditText
                        android:id="@+id/amount_et"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:paddingLeft="15dp"
                        android:textSize="15dp"
                        android:maxLength="5"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:paddingRight="10dp"
                        android:drawableRight="@android:drawable/ic_menu_month"
                        android:hint="Enter Plan Amount"
                        android:layout_height="44dp">
                    </EditText>
                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/info_back"
                android:id="@+id/btnSubmit"  android:text="Pay"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
    </ScrollView>
</LinearLayout>