<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_ll"
    android:background="@color/background"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple_500">
        <ImageView android:tint="@color/golden"
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_arrow_back" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivBack"
            android:text="Sender OTP Verify"
            android:textColor="@color/golden"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="230dp"
                android:padding="10dp"
                android:src="@drawable/splashlogo"
                android:layout_height="230dp">
            </ImageView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="30dp"
            android:id="@+id/cv"
            app:cardElevation="20dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#2D2942"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your Code and Verify OTP"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/golden"/>
            <TextView
                android:id="@+id/tvMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp">
                <EditText
                    android:id="@+id/etCode1"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:textColor="@color/red"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/etCode2"
                    android:maxLength="1"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:background="@drawable/rectangle"/>
                <EditText
                    android:id="@+id/etCode2"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:textColor="@color/red"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/etCode3"
                    android:maxLength="1"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:background="@drawable/rectangle"/>
                <EditText
                    android:id="@+id/etCode3"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:textColor="@color/red"
                    android:layout_centerVertical="true"
                    android:maxLength="1"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/view"
                    android:inputType="number"
                    android:singleLine="true"
                    android:background="@drawable/rectangle"/>
                <View
                    android:id="@+id/view"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true"/>
                <EditText
                    android:id="@+id/etCode4"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:textColor="@color/red"
                    android:maxLength="1"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:elevation="5dp"
                    android:layout_toRightOf="@+id/view"
                    android:inputType="number"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:background="@drawable/rectangle"/>
                <EditText android:visibility="gone"
                    android:id="@+id/etCode5"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:textColor="@color/red"
                    android:maxLength="1"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:elevation="5dp"
                    android:inputType="number"
                    android:layout_toRightOf="@+id/etCode4"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:background="@drawable/rectangle"/>
                <EditText android:visibility="gone"
                    android:id="@+id/etCode6"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:textColor="@color/red"
                    android:maxLength="1"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:elevation="5dp"
                    android:inputType="number"
                    android:layout_toRightOf="@+id/etCode5"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:background="@drawable/rectangle"/>
            </RelativeLayout>
            <TextView android:visibility="gone"
                android:id="@+id/tvOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvResendOtp"
                android:text="0:22 sec left"
                android:textColor="@color/red"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:layout_below="@+id/crdsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/submit_button"
                android:id="@+id/btnSubmit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Submit"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:textAllCaps="true"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="16dp" android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>

        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
